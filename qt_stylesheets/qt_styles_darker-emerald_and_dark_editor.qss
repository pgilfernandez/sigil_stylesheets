    color: #2a2a2a;
    background-color: #3c3c3c; /* same as enabled color */
    border-color: #3c3c3c; /* same as enabled color */
}

QPushButton:pressed {
    background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 #084e40, stop:1 #0d6f5c);
}

